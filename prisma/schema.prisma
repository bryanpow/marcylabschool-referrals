generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AuthorizedEmails {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  createdAt DateTime   @default(now())
  role      Role       @default(USER)
  name      String?
  referrals Referral[]

  @@unique([email, name])
}

model Referral {
  id              Int              @id @default(autoincrement())
  email           String
  name            String
  resume          String?
  gender          String?
  linkedIn        String?
  referrerEmail   String
  dateCreated     DateTime         @default(now())
  hasApplied      DateTime?
  hasBeenAccepted DateTime?
  hasEnrolled     DateTime?
  hasToured       DateTime?
  referrerName    String
  referrer        AuthorizedEmails @relation(fields: [referrerEmail, referrerName], references: [email, name])
}

model AuthorizationRequests {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String
  img   String
  date  DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
